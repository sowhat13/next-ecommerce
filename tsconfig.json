{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/layouts/*": ["layoyts/*"],
      "@/components/*": ["components/*"],
      "@/public/*": ["public/*"],
      
      "@/styles/*": ["styles/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/three.txt", "next-i18next.config.js"],
  "exclude": ["node_modules"]
}
